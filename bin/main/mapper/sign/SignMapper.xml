<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="basic.domain.sign.mapper.UserMapper">
	<select id="getUserDTO" resultType="basic.domain.sign.dto.UserDTO">
		SELECT * FROM user_table
	</select>
	<insert id="setUserDTO" parameterType="basic.domain.sign.dto.UserDTO">
		INSERT INTO user_table (id,password,name,birth,gender,phone,email)
		VALUES (#{id}, #{password}, #{name}, #{birth}, #{gender}, #{phone}, #{email})
	</insert>
	<select id="getPassword" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT password FROM user_table WHERE id = #{id}
	</select>
</mapper>
